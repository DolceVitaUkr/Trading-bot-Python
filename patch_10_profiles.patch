+        if not self.path.exists():
+            log.warning(f"Profiles file not found: {self.path}")
+            self._profiles = {}
+            return
+        self._profiles = json.loads(self.path.read_text(encoding="utf-8"))
+    def get(self, name: str) -> Optional[Dict[str, Any]]:
